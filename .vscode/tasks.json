{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-O3",
                //"-march=skylake",
                "-std=c++11",
                "-m64",
                "*.cpp",
                "-o",
                "a.exe",
                //"-I/home/ivan/workspace/boost_1_69_0",
                "-I/opt/intel/mkl/include",
                //"-I/usr/include/python3.6m",
                //"-I/usr/local/lib/python3.6/dist-packages/numpy/core/include",
                //"-lpython3.6m",
                //"-lboost_timer",
                //"-lboost_chrono",
                "-L/opt/intel/mkl/lib/intel64",
                "-L/opt/intel/lib/intel64",
                "-Wl,--no-as-needed",
                "-lmkl_intel_lp64",
                "-lmkl_intel_thread",
                "-lmkl_core",
                "-liomp5",
                "-lpthread",
                "-lm",
                "-ldl"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                //"-march=skylake",
                "-std=c++11",
                "-m64",
                "*.cpp",
                "-o",
                "a_dbg.exe",
                //"-I/home/ivan/workspace/boost_1_69_0",
                "-I/opt/intel/mkl/include",
                //"-I/usr/include/python3.6m",
                //"-I/usr/local/lib/python3.6/dist-packages/numpy/core/include",
                //"-lpython3.6m",
                //"-lboost_timer",
                //"-lboost_chrono",
                "-L/opt/intel/mkl/lib/intel64",
                "-L/opt/intel/lib/intel64",
                "-Wl,--no-as-needed",
                "-lmkl_intel_lp64",
                "-lmkl_intel_thread",
                "-lmkl_core",
                "-liomp5",
                "-lpthread",
                "-lm",
                "-ldl"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}