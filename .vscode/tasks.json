{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-O3",
                "-Wall",
                //"-march=skylake",
                "-std=c++11",
                "-m64",
                "-fopenmp",
                "./examples/perovskite/*.cpp",
                "./src/*.cpp",
                "-o",
                "a.exe",
                "-Wno-deprecated-declarations",

                "-I/opt/intel/mkl/include",
                "-I./src/external",
                //"-I/usr/include/python3.6m",
                //"-I/usr/local/lib/python3.6/dist-packages/numpy/core/include",
                //"-lpython3.6m",

                "-L/opt/intel/mkl/lib/intel64",
                "-Wl,--no-as-needed",
                "-lmkl_intel_lp64",
                "-lmkl_gnu_thread",
                "-lmkl_core",
                "-lgomp",
                "-lpthread",
                "-lm",
                "-ldl"

                //"-L/opt/intel/mkl/lib/intel64",
                //"-L/opt/intel/lib/intel64",
                //"-Wl,--no-as-needed",
                //"-lmkl_intel_lp64",
                //"-lmkl_intel_thread",
                //"-lmkl_core",
                //"-liomp5",
                //"-lpthread",
                //"-lm",
                //"-ldl"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                //"-march=skylake",
                "-std=c++11",
                "-m64",
                "-fopenmp",
                "./examples/perovskite/*.cpp",
                "./src/*.cpp",
                "-o",
                "dbg.exe",
                "-Wno-deprecated-declarations",

                "-I/opt/intel/mkl/include",
                "-I./src/external",
                //"-I/usr/include/python3.6m",
                //"-I/usr/local/lib/python3.6/dist-packages/numpy/core/include",
                //"-lpython3.6m",

                "-L/opt/intel/mkl/lib/intel64",
                "-Wl,--no-as-needed",
                "-lmkl_intel_lp64",
                "-lmkl_gnu_thread",
                "-lmkl_core",
                "-lgomp",
                "-lpthread",
                "-lm",
                "-ldl"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}